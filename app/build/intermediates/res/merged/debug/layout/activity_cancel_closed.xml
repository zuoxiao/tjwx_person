<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/gray"
        android:gravity="center"
        android:text="我的原因"
        android:textColor="@color/title_color"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/closed_planChange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/selecte_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="计划改变了"
            android:textColor="@drawable/selecte_radiobutton_text"
            android:checked="false" />

        <CheckBox
            android:id="@+id/closed_noNeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/selecte_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="不需要修理了"
            android:textColor="@drawable/selecte_radiobutton_text"
            android:checked="false" />

        <CheckBox
            android:id="@+id/closed_myown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/selecte_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="自己搞定了"
            android:textColor="@drawable/selecte_radiobutton_text"
            android:checked="false" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        android:gravity="center"
        android:text="工人的原因"
        android:textColor="@color/title_color"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/closed_behaveBadly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/selecte_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="态度恶劣"
            android:textColor="@drawable/selecte_radiobutton_text"
            android:checked="false" />

        <CheckBox
            android:id="@+id/closed_goodBad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/selecte_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="把好的整坏了"
            android:textColor="@drawable/selecte_radiobutton_text"
            android:checked="false" />

        <CheckBox
            android:id="@+id/closed_cookingBad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/selecte_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="技术太差了"
            android:textColor="@drawable/selecte_radiobutton_text"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/closed_dislike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/selecte_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="看不顺眼"
            android:textColor="@drawable/selecte_radiobutton_text"
            android:checked="false" />

        <CheckBox
            android:id="@+id/closed_fool"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/selecte_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="纯属糊弄"
            android:textColor="@drawable/selecte_radiobutton_text"
            android:checked="false" />

        <CheckBox
            android:id="@+id/closed_highPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/selecte_radiobutton"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="价格要高了"
            android:textColor="@drawable/selecte_radiobutton_text"
            android:checked="false" />
    </LinearLayout>

    <EditText
        android:id="@+id/unclosed_edt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edt_fillet_bg"
        android:gravity="left|top"
        android:hint="您可以输入50个字"
        android:maxLines="50"
        android:maxLength="50"
        android:padding="5dp" />

    <TextView
        android:id="@+id/unclosed_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selecte_btn"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>